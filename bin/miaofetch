#!/usr/bin/env bash

YELLOW='\033[1;33m'
RESET='\033[0m'

hostname=$(hostname)
os=$(lsb_release -si)
release=$(lsb_release -sr)
arch=$(uname -m)
kernel=$(uname -r)
uptime=$(uptime -p)
memory_total=$(free -m | awk '/^Mem:/{print $2}')
memory_used=$(free -m | awk '/^Mem:/{print $3}')

case "$1" in
"-nc" | "--no-cat")
 echo "${YELLOW}${USER}${RESET}@${YELLOW}${hostname}${RESET}
${YELLOW}OS${RESET}: $os $release $arch
${YELLOW}Kernel${RESET}: $kernel
${YELLOW}Uptime${RESET}: $uptime
${YELLOW}Memory${RESET}: $memory_used/$memory_total MB"
    exit 1
    ;;

*)
    echo "
            ${YELLOW}${USER}${RESET}@${YELLOW}${hostname}${RESET}
  ${YELLOW}\    /)${RESET}   ${YELLOW}OS${RESET}: $os $release $arch
   ${YELLOW})  ( ')${RESET}  ${YELLOW}Kernel${RESET}: $kernel
  ${YELLOW}(  /  )${RESET}   ${YELLOW}Uptime${RESET}: $uptime
   ${YELLOW}\(__)|${RESET}   ${YELLOW}Memory${RESET}: $memory_used/$memory_total MB
"
    exit 1
    ;;
esac
